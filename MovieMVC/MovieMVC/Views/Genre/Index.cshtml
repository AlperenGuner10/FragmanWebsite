@model IEnumerable<MovieMVC.Models.Entities.Genre>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container mt-4">
	<h1>Tür Listesi</h1>
	<hr />
	<table class="table table-striped table-bordered">
		<thead class="thead-dark">
			<tr>
				<th>ID</th>
				<th>Tür İsmi</th>
				<th>Ekle-Sil</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var genre in Model)
			{
				<tr>
					<td>@genre.GenreId</td>
					<td>@genre.GenreName</td>
					<td>
						<a asp-controller="Genre" asp-action="Edit" asp-route-id="@genre.GenreId" class="btn btn-primary btn-sm">
							<i class="fa fa-edit"></i> Güncelle
						</a>
						<a asp-controller="Genre" asp-action="Delete" asp-route-id="@genre.GenreId" class="btn btn-danger btn-sm"
						   onclick="return confirm('Are you sure you want to delete this genre?');">
							<i class="fa fa-trash"></i> Sil
						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
	<div class="mt-4">
		<a asp-controller="Genre" asp-action="Create" class="btn btn-success">
			<i class="fa fa-plus"></i> Yeni Tür Ekle
		</a>
	</div>
</div>

